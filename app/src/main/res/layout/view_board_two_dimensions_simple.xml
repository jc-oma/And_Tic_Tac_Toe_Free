<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        android:scaleType="centerCrop"
        android:scaleY="1.1"
        android:src="@drawable/spooky_house_background_diffuse_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.jcDevelopment.tictactoeadfree.module.boardsUI.twoDimensions.simpleXOBoard.GameEndedOverlay
        android:id="@+id/simple_two_dim_tic_game_end_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:translationZ="40dp"
        android:visibility="gone" />

    <com.jcDevelopment.tictactoeadfree.module.boardsUI.twoDimensions.OpponentLeftInfoView
        android:id="@+id/simple_two_dim_tic_opponent_left_game_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:translationZ="40dp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/one_one"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:alpha="0"
        android:cropToPadding="true"
        android:orientation="horizontal"
        android:textSize="80sp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@+id/one_two"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:alpha="1" />

    <ImageView
        android:id="@+id/one_two"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0"
        android:orientation="horizontal"
        android:textSize="80sp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@+id/one_three"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/one_one"
        app:layout_constraintTop_toTopOf="parent"
        tools:alpha="1" />

    <ImageView
        android:id="@+id/one_three"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0"
        android:orientation="horizontal"
        android:textSize="80sp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/one_two"
        app:layout_constraintTop_toTopOf="parent"
        tools:alpha="1" />

    <ImageView
        android:id="@+id/two_one"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0"
        android:orientation="horizontal"
        android:textSize="80sp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@+id/one_two"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/one_one"
        tools:alpha="1" />

    <ImageView
        android:id="@+id/two_two"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0"
        android:orientation="horizontal"
        android:textSize="80sp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@+id/one_three"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/one_one"
        app:layout_constraintTop_toBottomOf="@+id/one_one"
        tools:alpha="1" />

    <ImageView
        android:id="@+id/two_three"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0"
        android:orientation="horizontal"
        android:textSize="80sp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/one_two"
        app:layout_constraintTop_toBottomOf="@+id/one_one"
        tools:alpha="1" />

    <ImageView
        android:id="@+id/three_one"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0"
        android:orientation="horizontal"
        android:textSize="80sp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@+id/one_two"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/two_one"
        tools:alpha="1"
        tools:src="@drawable/ic_spooky_kurbis_v3_3d" />

    <ImageView
        android:id="@+id/three_two"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0"
        android:orientation="horizontal"
        android:textSize="80sp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@+id/one_three"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/one_one"
        app:layout_constraintTop_toBottomOf="@+id/two_one"
        tools:alpha="1" />

    <ImageView
        android:id="@+id/three_three"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0"
        android:orientation="horizontal"
        android:textSize="80sp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/one_two"
        app:layout_constraintTop_toBottomOf="@+id/two_one"
        tools:alpha="1" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/board_view_group"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:constraint_referenced_ids="one_one,one_two,one_three,two_one,two_two,two_three,three_one,three_two,three_three" />

    <TextView
        android:id="@+id/game_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/berkshire_swash_regular"
        android:minLines="2"
        android:textAlignment="center"
        android:textColor="@color/spooky_green"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/three_three"
        tools:text="Spieler 1" />

    <Button
        android:id="@+id/restart_game_button"
        android:layout_width="258dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="256:100"
        android:background="@drawable/button_spooky_edged"
        android:fontFamily="@font/berkshire_swash_regular"
        android:text="@string/restart_game"
        android:textAllCaps="false"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/game_info" />

    <ImageView
        android:id="@+id/simple_2d_thinking_witch"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0"
        android:elevation="2dp"
        android:rotation="-30"
        android:src="@drawable/ic_spooky_thinking_witch"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/three_two"
        app:layout_constraintTop_toBottomOf="@id/three_three"
        tools:alpha="1" />
</androidx.constraintlayout.widget.ConstraintLayout>