<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_fragment_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/home_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:titleTextAppearance="@font/berkshire_swash_regular"
        app:titleTextColor="@color/black"
        android:background="@color/colorPrimary"
        android:elevation="8dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/home_one_player_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:alpha="0"
        android:fontFamily="@font/berkshire_swash_regular"
        android:text="@string/home_one_play_button"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_toolbar"
        tools:alpha="1" />

    <ImageView
        android:id="@+id/home_spooky_witch_imageview"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:alpha="0"
        android:elevation="10dp"
        android:scaleType="fitEnd"
        android:src="@drawable/ic_spooky_witch"
        app:layout_constraintBottom_toBottomOf="@id/home_one_player_button"
        app:layout_constraintEnd_toStartOf="@id/home_one_player_button"
        app:layout_constraintTop_toTopOf="@id/home_one_player_button"
        tools:alpha="1" />

    <Button
        android:id="@+id/home_two_player_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:alpha="0"
        android:fontFamily="@font/berkshire_swash_regular"
        android:text="@string/home_two_player_button"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_one_player_button"
        tools:alpha="1" />

    <ImageView
        android:id="@+id/home_spooky_ghost_imageview"
        android:layout_width="32dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:alpha="0"
        android:elevation="10dp"
        android:scaleType="fitEnd"
        android:src="@drawable/ic_spooky_ghost"
        app:layout_constraintBottom_toBottomOf="@id/home_two_player_button"
        app:layout_constraintEnd_toStartOf="@id/home_two_player_button"
        app:layout_constraintTop_toTopOf="@id/home_two_player_button"
        tools:alpha="1" />

    <ImageView
        android:id="@+id/home_spooky_ghost_imageview_2"
        android:layout_width="32dp"
        android:layout_height="0dp"
        android:alpha="0"
        android:elevation="10dp"
        android:rotationY="180"
        android:scaleType="fitEnd"
        android:src="@drawable/ic_spooky_ghost"
        app:layout_constraintBottom_toBottomOf="@id/home_two_player_button"
        app:layout_constraintEnd_toStartOf="@id/home_spooky_ghost_imageview"
        app:layout_constraintTop_toTopOf="@id/home_two_player_button"
        tools:alpha="1" />

    <ImageView
        android:id="@+id/home_spooky_house_imageview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_spooky_house_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:alpha="0" />

    <com.example.tictactoeadfree.module.gameChoser.GameChoserView
        android:id="@+id/home_game_choser"
        android:layout_width="0dp"
        android:alpha="0"
        tools:alpha="1"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/home_two_player_button"/>

</androidx.constraintlayout.widget.ConstraintLayout>