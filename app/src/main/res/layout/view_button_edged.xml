<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/edge_button_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/edged_button_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/restart_game"
        app:layout_constraintTop_toTopOf="@id/restart_game"
        app:layout_constraintEnd_toEndOf="@id/restart_game"
        app:layout_constraintBottom_toBottomOf="@id/restart_game"
        android:src="@drawable/blender_buttonedge2"/>

    <TextView
        android:id="@+id/restart_game"
        android:fontFamily="@font/berkshire_swash_regular"
        android:backgroundTint="@color/fullTransparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:paddingBottom="40dp"
        android:paddingTop="40dp"
        android:layout_marginTop="18dp"
        android:text="@string/restart_game"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>